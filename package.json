{
  "name": "ad-generator",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": "mrmidi",
  "description": "Modern web app for creating and printing text announcements with WYSIWYG accuracy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrmidi/ad-generator.git"
  },
  "bugs": {
    "url": "https://github.com/mrmidi/ad-generator/issues"
  },
  "homepage": "https://github.com/mrmidi/ad-generator#readme",
  "keywords": [
    "nextjs",
    "typescript",
    "printing",
    "wysiwyg",
    "react",
    "tailwindcss",
    "announcements",
    "pdf",
    "iframe-printing"
  ],
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "next": "15.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/html2canvas": "^1.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "audit-ci": "^7.1.0",
    "canvas": "^3.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  }
}
